# 우편번호 찾기 시스템 환경 설정

# 서버 포트 (기본값: 3005)
PORT=3005

# 개발 환경 설정
NODE_ENV=development

# 우편번호 API 제공자 설정
POSTAL_PROVIDER=juso

# 주소정보누리집(juso.go.kr) API 키 (필수)
# https://www.juso.go.kr/addrlink/devAddrLinkRequestGuide.do 에서 발급 받으세요
JUSO_API_KEY=your_juso_api_key_here

# 파일 업로드 설정
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
MAX_ROWS=500

# API 요청 제한 설정
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS 설정 (프론트엔드 URL)
FRONTEND_URL=http://localhost:3005

# SSL 인증서 경로 (선택사항)
SSL_KEY_PATH=/absolute/path/to/certs/key.pem
SSL_CERT_PATH=/absolute/path/to/certs/cert.pem