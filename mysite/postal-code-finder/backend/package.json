{
  "name": "postal-code-backend",
  "version": "1.0.0",
  "description": "우편번호 자동 입력 백엔드 서버",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "build": "pkg . --out-path=../dist",
    "build-win": "pkg . --targets=node18-win-x64 --out-path=../dist",
    "build-all": "pkg . --targets=node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path=../dist"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1",
    "supertest": "^7.1.4"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "../../frontend/public/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "../dist"
  },
  "keywords": [
    "postal-code",
    "address",
    "excel",
    "korea"
  ],
  "author": "Developer",
  "license": "MIT"
}
